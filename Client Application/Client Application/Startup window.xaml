<Window x:Class="Client_Application.Startup_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client_Application"
        mc:Ignorable="d"
        Title="Startup window" Height="450" Width="400">
    <Grid Background="#FF2285B4">
        <Label x:Name="welcomeLabel" Content="Welcome!" Margin="98,47,98,294" Background="Transparent" Foreground="White" FontSize="40"/>
        <Label x:Name="enterUserNameLabel" Content="Username:" Margin="31,170,183,188" Foreground="White" FontSize="17"/>
        <TextBox x:Name="enterUsernameBox" TextWrapping="Wrap" Text="" Margin="31,222,38,165"/>
        <Button x:Name="EnterButton" Content="Enter" Margin="62,309,69,70" FontSize="20" Foreground="White" Background="#FF17719C" BorderBrush="{x:Null}" Click="EnterButton_Click"/>
        <Label Content="Input your username in the box below" Margin="62,105,-62,-105" Background="{x:Null}" Foreground="White" FontSize="14"/>

    </Grid>
</Window>
